<table>
  <% episodes.each do |episode| %>
    <tr>
      <td><%= link_to episode.series.title, episode.series %><%= '❤️' if episode.series.favourite %></td>
      <td><%= link_to episode.title, episode %></td>
      <td><%= time_ago_in_words episode.latest_media %></td>
    </tr>
  <% end %>
</table>
