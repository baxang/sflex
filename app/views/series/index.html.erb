<%= link_to 'Home', root_path %>
<p id="notice"><%= notice %></p>

<dl>
  <dd><%= Series.count %> series, last update <%= time_ago_in_words Series.last.created_at %></dd>
  <dd><%= Episode.count %> episodes, last update <%= time_ago_in_words Episode.last.created_at %></dd>
</dl>

<h2>Series</h2>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Title</td>
      <td>Favourite</td>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= link_to series.title, series %></td>
        <td><%= series.episodes_count %></td>
        <td><%= link_to series.favourite? ? '❤️' : '+', favourite_series_path(series), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>
